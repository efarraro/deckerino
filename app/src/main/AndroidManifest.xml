<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.slothwerks.hearthstone.compendiumforhearthstone" >

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk android:minSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".fragments.CardDetail"
            android:label="@string/title_activity_card_detail"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.slothwerks.hearthstone.compendiumforhearthstone.MainActivity" />
        </activity>
        <activity
            android:name=".activities.CardListActivity"
            android:label="@string/title_activity_card_list" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.DeckBuilderActivity"
            android:label="@string/title_activity_deck_builder" >
        </activity>
        <activity
            android:name=".activities.ChooseClassActivity"
            android:label="@string/title_activity_choose_class" >
        </activity>
    </application>

</manifest>
