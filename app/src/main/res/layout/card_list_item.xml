<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:background="@android:color/background_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp">

    <!-- card name -->
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="wrap_content">

        <!-- card name -->
        <TextView
            android:id="@+id/card_list_item_name"
            android:text="Card name"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />

        <!-- card text -->
        <TextView
            android:id="@+id/card_list_item_text"
            android:text="Battlecry: Deal 3 damage to target minion"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_below="@id/card_list_item_name"
            android:singleLine="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <!-- card stats -->
    <LinearLayout
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_gravity="right"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <!-- mana cost -->
        <FrameLayout
            android:background="#4466FF"
            android:layout_weight="1"
            android:layout_marginBottom="2dp"
            android:layout_gravity="right"
            android:layout_width="25dp"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/card_list_item_cost"
                android:text="5"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </FrameLayout>

        <!-- attack -->
        <FrameLayout
            android:id="@+id/card_list_item_attack_container"
            android:background="#ffcc44"
            android:layout_weight="1"
            android:layout_marginBottom="2dp"
            android:layout_gravity="right"
            android:layout_width="25dp"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/card_list_item_attack"
                android:text="5"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </FrameLayout>

        <!-- health -->
        <FrameLayout
            android:id="@+id/card_list_item_health_container"
            android:background="#dd0000"
            android:layout_weight="1"
            android:layout_marginBottom="2dp"
            android:layout_gravity="right"
            android:layout_width="25dp"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/card_list_item_health"
                android:text="5"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </FrameLayout>

        <!-- attack value -->
        <!--<TextView
            android:id="@+id/card_list_item_attack"
            android:text="3"
            android:gravity="right"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/card_list_item_health"
            android:text="4"
            android:layout_below="@id/card_list_item_attack"
            android:gravity="right"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>-->

    </LinearLayout>

</LinearLayout>