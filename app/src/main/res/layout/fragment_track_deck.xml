<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.slothwerks.hearthstone.compendiumforhearthstone.ui.track.TrackDeckActivity$PlaceholderFragment">

    <TextView
        android:id="@+id/track_deck_cards_left"
        android:text="Cards remaining: 24/30"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ListView
        android:id="@+id/view_deck_listview"
        android:layout_below="@id/track_deck_cards_left"
        android:choiceMode="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

</RelativeLayout>
