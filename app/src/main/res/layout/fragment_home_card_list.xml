<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.slothwerks.hearthstone.compendiumforhearthstone.ui.browse.BrowseActivity.CardListFragment">

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/mana_crystal_blue"/>

    <com.astuetz.PagerSlidingTabStrip
        android:layout_below="@id/toolbar"
        android:id="@+id/card_list_pager_title_strip"
        android:layout_width="match_parent"
        android:layout_height="48dip" />

    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_list_pager"
        android:layout_below="@id/card_list_pager_title_strip"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>
