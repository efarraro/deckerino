<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.slothwerks.hearthstone.compendiumforhearthstone.ui.decks.DeckManagementActivity$PlaceholderFragment">

    <TextView
        android:id="@+id/deck_management_no_decks"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_margin="16dp"
        android:text="@string/deck_mangagement_no_decks"
        android:textColor="@color/textMedium"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/deck_management_create_deck_button"
        android:visibility="gone"
        android:background="@drawable/background_tab"
        android:layout_below="@id/deck_management_no_decks"
        android:text="@string/deck_management_create_deck"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ListView
        android:id="@+id/deck_management_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/button_deck_management_create_deck_floating"
        android:text="+"
        android:elevation="4dp"
        android:background="@drawable/circle_button"
        android:layout_margin="16dp"
        android:textSize="32dp"
        android:textColor="@android:color/white"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="64dp"
        android:layout_height="64dp"/>

</RelativeLayout>
