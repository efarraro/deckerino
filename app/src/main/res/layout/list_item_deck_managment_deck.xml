<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/activated"
              android:orientation="vertical"
              android:paddingLeft="8dp"
              android:paddingRight="8dp"
              android:paddingTop="8dp"
              android:paddingBottom="8dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/list_item_deck_management_square"
        android:background="@color/warlock_primary"
        android:layout_marginRight="12dp"
        android:layout_width="40dp"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/list_item_deck_management_class_letter"
            android:text="W"
            android:textSize="@dimen/bigText"
            android:textColor="@android:color/white"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </FrameLayout>

    <TextView
        android:id="@+id/list_item_deck_management_title"
        android:layout_toRightOf="@id/list_item_deck_management_square"
        android:text="Title"
        android:textSize="@dimen/normalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/list_item_deck_management_class"
        android:text="HUNTER"
        android:textSize="@dimen/smallText"
        android:layout_alignStart="@id/list_item_deck_management_title"
        android:layout_below="@id/list_item_deck_management_title"
        android:textColor="@color/textMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>