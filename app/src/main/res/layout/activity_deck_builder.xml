<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- main content-->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.slothwerks.hearthstone.compendiumforhearthstone.activities.DeckBuilderActivity"
        tools:ignore="MergeRootFrame" >

        <!-- deck summary widget at the top of the page -->
        <FrameLayout
            android:id="@+id/activity_deck_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:id="@+id/container"
            android:layout_below="@id/activity_deck_summary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></FrameLayout>

    </RelativeLayout>

    <!-- used to display deck list -->
    <ListView android:id="@+id/deck_builder_deck_drawer"
              android:layout_width="240dp"
              android:layout_height="match_parent"
              android:layout_gravity="right"
              android:choiceMode="singleChoice"
              android:divider="@android:color/transparent"
              android:dividerHeight="0dp"
              android:background="#03a9f4"/>

    <!-- standard nav drawer -->
    <ListView android:id="@+id/left_drawer"
              android:layout_width="240dp"
              android:layout_height="match_parent"
              android:layout_gravity="left"
              android:choiceMode="singleChoice"
              android:divider="@android:color/transparent"
              android:dividerHeight="0dp"
              android:background="@color/primary"/>

</android.support.v4.widget.DrawerLayout>
