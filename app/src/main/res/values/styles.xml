<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:textViewStyle">@style/DefaultTextStyle</item>
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
    </style>
    
    <style name="CustomActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/primary</item>
    </style>

    <style name="DefaultTextStyle" parent="android:Widget.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#444444</item>
    </style>

    <style name="activated" parent="AppTheme">
        <item name="android:background">?android:attr/activatedBackgroundIndicator</item>
    </style>

    <!-- app base -->
    <color name="default_text">#444444</color>
    <color name="light_gray">#dddddd</color>
    <color name="disabled">#bbbbbb</color>
    <color name="background">#eeeeee</color>
    <color name="textMedium">#777777</color>
    <dimen name="smallestText">10sp</dimen>
    <dimen name="smallText">14sp</dimen>
    <dimen name="normalText">18sp</dimen>
    <dimen name="bigText">24sp</dimen>

    <!-- card colors -->
    <color name="common">#cfd8dc</color>
    <color name="rare">#304ffe</color>
    <color name="epic">#9c27b0</color>
    <color name="legendary">#ff9800</color>
    <color name="basic">#666</color>

    <color name="health_red">#e51c23</color>
    <color name="attack_gold">#ffc107</color>
    <color name="mana_crystal_blue">#5677fc</color>

    <!-- class colors -->
    <color name="hunter_primary">#259b24</color>
    <color name="hunter_dark">#0d5302</color>
    <color name="hunter_light">#a3e9a4</color>

    <color name="warlock_primary">#ff673ab7</color>
    <color name="warlock_dark">#311b92</color>
    <color name="warlock_light">#d1c4e9</color>

    <color name="druid_primary">#795548</color>

    <color name="shaman_primary">#3f51b5</color>

    <color name="mage_primary">#03a9f4</color>

    <color name="priest_primary">#ffc107</color>

    <color name="warrior_primary">#b0120a</color>

    <color name="rogue_primary">#424242</color>

    <color name="paladin_primary">#fb8c00</color>

    <color name="neutral_primary">#999999</color>

    <!-- primary theme colors -->
    <color name="primary">#03a9f4</color>
    <color name="primary_dark">#01579b</color>
    <color name="primary_light">#b3e5fc</color>
    <color name="accent">#ffc107</color>

    <drawable name="tab_warlock">@color/warlock_primary</drawable>

    <!-- alternate theme colors -->
